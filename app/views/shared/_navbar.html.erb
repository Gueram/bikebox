<div class="main-box navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <%= link_to root_path, class: "navbar-brand" do %>
      <div class="logo">
        <%= image_tag "boxbike_logo.png" %>
        <h4>Bikebox</h4>
      </div>
    <% end %>
  </div>

  <div style="width: 700px; height: 84px; margin-top: 15px">
    <% unless current_page?(root_path) %>
      <%= form_tag boxbikes_path, method: :get do %>
        <div class="search-form-control form-group">
           <%= text_field_tag :query,
            params[:query],
            class: "form-control string required",
            id: "search_query",
            placeholder: "Enter address",
            height: "45px"
          %>
          <%= submit_tag "Search", class: "btn btn-primary", style:"margin-top: 10px; height: 44px; border-radius: 4px;" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Rent my box",new_boxbike_path, class: "btn btn-flat" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "alberto.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
