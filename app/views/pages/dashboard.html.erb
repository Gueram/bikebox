<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="reservations-tab" data-toggle="tab" href="#reservations" role="tab" aria-controls="reservations" aria-selected="true">reservations</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="boxes-tab" data-toggle="tab" href="#boxes" role="tab" aria-controls="boxes" aria-selected="false">boxes</a>
  </li>
</ul>
<div class="my-container">
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade show active" id="reservations" role="tabpanel" aria-labelledby="reservations-tab">
    <div class="container-reservation">
        <% @my_reservations.each do |reservation| %>
          <div class="contract-card">
            <div class="contract-address"><%= reservation.boxbike.address %></div>
            <div class="contract-capacity">Bikes: <%= reservation.number_bikes %></div>
            <div class="contract-price">Price: €<%= reservation.boxbike.price %></div>
            <div class="contract-date">
              <div class="start"><%= reservation.start_date %></div>
              <i class=“fas fa-arrows-alt-h”></i>
              <div class="end"><%= reservation.end_date %></div>
            </div>
            <div class="contract-action"><%= link_to "Cancel", contract_path(reservation), method: :delete, data: { confirm: "Are you sure?" } %></div>
          </div>
        <% end %>
      </div>
    </div>

  <div class="tab-pane fade" id="boxes" role="tabpanel" aria-labelledby="boxes-tab">
    <div class="container-boxe">
      <% @my_boxes.each do |boxe| %>
      <div class="card-product">
        <%= image_tag "https://source.unsplash.com/weekly?bike#{boxe.id}" %>
        <div class="card-product-infos">

      <!-- <div class="boxe-card"> -->
        <p> <%= boxe.address %> - <strong> <%= boxe.contracts.length %> reservations</strong> </p>
      </div>
      </div>
      <% end %>
      </div>
  </div>
  <div id="home-link"><%= link_to "Back to boxes list", boxbikes_path %></div>
</div>
</div>




